<article class="item item--place | h-card">
  <header class="item__header">
    <h3 class="item__title | p-name">
      <a href="{{ item.url }}">
        {% if item.data.place.icon %}<svg width="1em" height="1em" aria-hidden="true" focusable="false"><use href="/assets/vectors/app.svg#{{ item.data.place.icon }}"></use></svg>{% endif %}
        {{ item.data.title | markdown: 'inline' }}
      </a>
    </h3>
  </header>

  <p class="item__main s-linear | h-adr">
    <span class="p-locality">{{ item.data.place.address.locality }}</span>,
    <span class="p-country-name">{{ item.data.place.address.country-name }}</span>
  </p>
</article>
