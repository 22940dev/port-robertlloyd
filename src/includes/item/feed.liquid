{%- if item.data.inReplyTo -%}
  <p><small>↪︎ In reply to <a class="u-in-reply-to" href="{{ item.data.inReplyTo }}">a post on {{ item.data.inReplyTo | hostname }}</a></small></p>
{%- endif -%}
{{- item.templateContent | strip_mentions | strip_newlines -}}
{%- if item.data.photo -%}
  {%- include 'photos' with item.data.photo
    imageClass: 'u-photo'
    imagePreset: 'feed'
  -%}
{%- endif -%}
{%- if item.data.title -%}
  <hr>
  <p><a href="mailto:{{ app.author.email }}?subject=Reply: {{ item.data.title }}">Reply via email</a></p>
{%- elsif item.data.category -%}
  <p>{% for category in item.data.category %}{{ category | hashtag }} {% endfor %}</p>
{%- endif -%}
