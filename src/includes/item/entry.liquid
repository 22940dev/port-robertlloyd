<article class="item | h-entry">
  <header class="item__header">
    <h3 class="item__title | p-name">
      <a class="u-url" rel="bookmark" href="{{ item.url }}">{{ item.data.title | markdown: 'inline' }}</a>
    </h3>
  </header>

{%- if item.data.summary -%}
  <div class="item__main s-linear | p-summary">
    {{ item.data.summary | markdown }}
  </div>
{%- endif -%}

  <footer class="item__footer">
    <time class="dt-published" datetime="{{ item.date | date: dates.iso }}">{{ item.date | date: dates.date_short }}</time>
  </footer>
</article>
