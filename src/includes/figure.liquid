<figure class="align-{{ alignment | default: 'none' }}">
{%- if content %}
  {{- content | markdown -}}
{%- elsif embed %}
  {%- render 'embed'
    embed: embed
    poster: embedPoster
    ratio: embedRatio | default: false
  -%}
{%- else %}
  {%- render 'image' with figure
    preset: imagePreset
    ratio: imageRatio | default: false
  -%}
{%- endif %}
{%- if caption %}
  <figcaption>
    {{ caption | markdown }}
  </figcaption>
{%- endif %}
</figure>
