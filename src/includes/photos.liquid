<figure class="align-{{ alignment | default: 'none' }}">
  <div class="photos" style="--columns: {{ columns | default: photos.size }}">
  {%- for item in photos -%}
    {%- render 'image' with item.url
      alt: item.alt
      class: image_class
      preset: image_preset
      ratio: image_ratio
    -%}
  {%- endfor -%}
  </div>
{%- if caption %}
  <figcaption>
    {{ caption | markdown }}
  </figcaption>
{%- endif %}
</figure>
