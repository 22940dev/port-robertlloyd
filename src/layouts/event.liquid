{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer-event'
    date: date
    start: start
    end: end
    place: place
    vocab: vocab
  -%}
  {%- render 'header'
    title: title
    summary: summary
    url: url
  -%}
  {%- capture content -%}
    {%- if image -%}
      {%- render 'image' with image
        class: 'align-start'
        preset: 'thumbnail'
      -%}
    {%- endif -%}
    {{ content }}
  {%- endcapture -%}
  {%- render 'content' with content -%}
  {%- render 'section' with related_articles
    id: 'related'
    title: 'Related articles'
    items_grid_size: '15rem'
  -%}
  {% for this in category %}
    {%- capture section_title %}Other {{ this }} events{%- endcapture -%}
    {%- assign related = collections.event | includes: 'data.category',this | excludes: 'url',page.url | reverse -%}
    {%- render 'section' with related_events
      id: 'related'
      title: section_title
      items_modifier: 'inline'
    -%}
  {%- endfor -%}
{%- endblock -%}
