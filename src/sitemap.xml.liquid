---
eleventyExcludeFromCollections: true
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
{%- for item in collections.all reversed  -%}
  <url>
    <loc>{{ item.url | absolute_url: app.url }}</loc>
    <lastmod>{{ item.date | date: 'yyyy-MM-dd' }}</lastmod>
    <changefreq>{{ item.data.changefreq }}</changefreq>
    <priority>{{ item.data.priority }}</priority>
    {%- if item.data.image -%}
    <image:image>
      <image:loc>{{ item.data.shareImage | replace: '&','&amp;' }}</image:loc>
    </image:image>
    {%- endif -%}
  </url>
{%- endfor -%}
</urlset>
