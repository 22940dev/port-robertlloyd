{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer'
    date: date
  -%}
  {%- render 'header'
    title: title
    summary: summary
  -%}
  {%- capture content -%}
    {{ content }}
    {%- for slide in slides -%}
      {%- render 'figure' with slide.image
        caption: slide.notes
        alignment: 'slide'
        image_preset: 'thumbnail'
      -%}
    {%- endfor -%}
  {%- endcapture -%}
  {%- render 'content' with content -%}
{%- endblock -%}
