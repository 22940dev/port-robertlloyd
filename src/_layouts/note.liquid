{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer'
    date: date
    location: location
    geo: geo
    in_reply_to: in_reply_to
    canonical: canonical
  -%}
  {%- render 'content' with content
    properties: 'e-content p-name'
  -%}
  {%- render 'categories' with category -%}
  {%- assign webmentions = webmentions.children | webmentions_for_url: page.url -%}
  {%- render 'section-remarks' with webmentions
    id: 'webmentions'
    title: 'Webmentions'
  -%}
{%- endblock -%}
