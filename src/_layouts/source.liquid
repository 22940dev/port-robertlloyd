{%- assign tag = page.fileSlug | prepend: 'source:' -%}
{%- assign items = collections.article | includes: 'data.tags',tag -%}
{%- assign title = page.data.title -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'header'
    title: page.data.title
    summary: page.data.summary
    url: page.data.url
  -%}
  {%- render 'items' with items
    item_modifier: 'inline'
  -%}
{%- endblock -%}
