{%- assign tag = page.fileSlug | prepend: 'source:' -%}
{%- assign items = collections.article | includes: 'data.tags',tag -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'header'
    title: title
    summary: summary
    url: url
  -%}
  {%- render 'items' with items
    grid_size: '16rem'
  -%}
{%- endblock -%}
