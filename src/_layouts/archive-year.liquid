{%- assign title = year -%}
{%- assign featured = collections.article | includes: 'data.tags','featured' | includes: 'data.date',year -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  <h1 class="main__title">Archive</h1>
  <div class="main__introduction">{{ title }}</div>
  {%- render 'section-months' with months
    year: year
  -%}
  {%- render 'section' with featured
    id: 'featured'
    title: 'Select articles from this year'
    scrollable: true
    items_limit: 3
    grid_size: '16rem'
    component: 'card'
  -%}
{%- endblock -%}
