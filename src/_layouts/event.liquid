{%- assign venue = venues | where: 'fileSlug',venue | first -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'footer-event'
    date: date
    start: start
    end: end
    venue: venue
  -%}
  {%- render 'header'
    title: title
    summary: summary
    url: url
  -%}
  {%- capture content -%}
    {%- if url contains 'imdb.com' -%}
      {%- assign imdb_id = url | remove: 'https://www.imdb.com/title/' | remove: '/' -%}
      {%- capture image %}https://img.omdbapi.com/?apikey={{ app.token.ombdapi }}&i={{ imdb_id }}&h=560{% endcapture -%}
      {%- assign alt = title | prepend: 'Poster for ' -%}
      {%- render 'image' with image
        class: 'align-start'
        preset: 'thumbnail'
      -%}
    {%- endif -%}
    {{ content }}
  {%- endcapture -%}
  {%- render 'content' with content -%}

  {% for cat in category %}
    {%- capture title %}Other events in the {{ cat }} series{%- endcapture -%}
    {%- assign related = collections.event | includes: 'data.category',cat | reverse -%}
    {%- if related.size > 0 %}
      {%- render 'section' with related
        id: 'related'
        title: title
        item_modifier: 'inline'
      -%}
    {%- endif -%}
  {%- endfor -%}
{%- endblock -%}
