{%- assign title = date | date: '%B %Y' -%}
{%- assign year = date | date: '%Y' -%}
{%- assign month = date | date: '%b' -%}
{%- assign items = collections.post | includes: 'data.date',year | includes: 'data.date',month -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  <h1 class="main__title">Archive</h1>
  <div class="main__introduction">{{ title }}</div>
  {%- if items.size > 0 -%}
    {%- include 'items' with items
      item_modifier: 'inline'
    -%}
  {%- else -%}
    {%- include 'content' with 'Nothing was published during this month.' -%}
  {%- endif %}
{%- endblock -%}
