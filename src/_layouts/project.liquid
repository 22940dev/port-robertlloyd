{%- assign tag = page.fileSlug | prepend: 'project:' -%}
{%- assign articles = collections.article | includes: 'data.tags',tag -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'header'
    title: title
    summary: summary
  -%}
  {%- render 'content' with content -%}
  {%- if items.size > 0 %}
    {%- render 'section' with articles
      id: 'related'
      title: 'Related articles'
      grid_size: '16rem'
    -%}
  {%- endif -%}
{%- endblock -%}
