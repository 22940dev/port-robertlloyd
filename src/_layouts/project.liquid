{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'header'
    title: title
    summary: summary
  -%}
  {%- render 'content' with content -%}
  {%- assign related = collections.article | includes: 'data.category',title -%}
  {%- if related.size > 0 %}
    {%- render 'section' with related
      id: 'related'
      title: 'Related articles'
      grid_size: '16rem'
    -%}
  {%- endif -%}
{%- endblock -%}
