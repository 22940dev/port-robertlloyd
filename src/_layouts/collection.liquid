{%- assign collection = page.fileSlug -%}
{%- assign items = collections.all | includes: 'data.collection',collection -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'header'
    title: title
    summary: summary
  -%}
  {%- render 'content' with content -%}
  {%- render 'section' with items
    id: 'items'
    title: 'Items in this collection'
    item_modifier: 'inline'
  -%}
{%- endblock -%}
