{%- assign collection = page.fileSlug -%}
{%- assign items = collections.all | includes: 'data.collection',collection -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- include 'header' -%}
  {%- if content -%}
    {%- include 'content' -%}
  {%- endif -%}
  {%- include 'section'
    section_id: 'items'
    section_title: 'Items in this collection'
    items: items
    item_modifier: 'inline'
  -%}
{%- endblock -%}
