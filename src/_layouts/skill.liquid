{%- assign title = page.data.title -%}
{%- assign items = collections.project | includes: 'data.category',title -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'header'
    title: title
    summary: page.data.summary
  -%}
  {%- render 'items' with items
    grid_size: '12rem'
    component: 'card'
    card_image_present: 'card-square'
  -%}
{%- endblock -%}
