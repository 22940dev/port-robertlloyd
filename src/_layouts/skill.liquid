{%- assign tag = page.fileSlug | prepend: 'skill:' -%}
{%- assign items = collections.project | includes: 'data.tags',tag -%}
{%- assign title = page.data.title -%}
{%- layout 'default' -%}
{%- block 'main' -%}
  {%- render 'header'
    title: page.data.title
    summary: page.data.summary
  -%}
  {%- render 'items' with items
    grid_size: '12rem'
    component: 'card'
    card_image_present: 'card-square'
  -%}
{%- endblock -%}
