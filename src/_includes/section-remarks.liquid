<section class="section" aria-labelledby="{{ id }}">
  <div class="section__container">
    <header class="section__header">
      <h2 class="section__title" id="{{ id }}">{{ title }}</h2>
    </header>

    <details class="section__main">
      <summary>
        {% render 'facepile' with section-remarks
          type: title | downcase
        %}
      </summary>

      <div style="--grid-size: {{ grid_size | default: '100%' }}">
      {% for remark in section-remarks %}
        {% render 'item/remark'
          item: remark
        %}
      {% endfor %}
      </div>
    </details>
  </div>
</section>
