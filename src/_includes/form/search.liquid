<form class="form" id="search" role="search" data-search-index="/archive/search.json" action="https://duckduckgo.com" method="get">
  <fieldset class="form__container">
    <legend class="form__header">
      <span class="form__title" id="search-label">Search this site</span>
    </legend>
    <div class="form__field">
      <div class="form__combobox" id="search-combobox" role="combobox" aria-expanded="false" aria-owns="search-listbox" aria-haspopup="listbox">
        <input class="form__input" id="search-input" type="search" name="q" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" aria-controls="search-listbox" title="Enter search keywords" placeholder="e.g. Brasilia, Design, Olympicsâ€¦">
        <input type="hidden" name="sites" value="{{ app.url }}">
        <input type="hidden" name="kl" value="uk-en">
        <ul class="form__listbox" id="search-listbox" role="listbox" aria-labelledby="search-label" hidden></ul>
      </div>
      <button class="form__button" id="search-submit" type="submit">Search with DuckDuckGo</button>
    </div>
  </fieldset>
  <script src="/assets/scripts/search.js"></script>
</form>
