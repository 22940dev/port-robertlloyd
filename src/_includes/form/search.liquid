      <span class="form__title">Search this site</span>
    </legend>
    <div class="form__field">
      <input class="form__input" type="search" name="q" placeholder="e.g. Brasilia, Design, Olympicsâ€¦" title="Enter search keywords">
      <input type="hidden" name="sites" value="{{ app.url }}">
