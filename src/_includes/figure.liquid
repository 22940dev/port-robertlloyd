<figure class="align-{{ alignment | default: 'none' }}">
{%- if content %}
  {{ content | markdownify }}
{%- else %}
  {%- render 'image' with figure
    preset: image_preset
    ratio: image_ratio | default: false
  -%}
{%- endif %}
{%- if caption %}
  <figcaption>
    {{ caption | markdownify }}
  </figcaption>
{%- endif %}
</figure>
