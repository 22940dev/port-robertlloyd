<article class="item item--{{ modifier | default: 'block' }} | h-entry">
  <div class="item__main s-linear | e-content p-name">
    {{ item.templateContent }}
  </div>

  <footer class="item__footer">
    <a class="u-url" rel="bookmark" href="{{ item.url }}" aria-label="{{ item.data.date | date: dates.date_long }}">
      <time class="dt-published" datetime="{{ item.data.date | date: dates.iso }}">
        <span>{{ item.data.date | date: dates.date_short }}</span>
        <span>{{ item.data.date | date: dates.time }}</span>
      </time>
    </a>
  </footer>
</article>
