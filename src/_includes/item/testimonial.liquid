<figure class="item item--testimonial | h-review">
  <blockquote class="item__main | e-content p-name">
    {{ item.data.content | markdown }}
  </blockquote>
  <figcaption class="item__footer | p-author h-card">
    <span class="p-name">{{ item.data.name }},</span>
    <span class="p-role">{{ item.data.role }},</span>
    <span class="p-org">{{ item.data.org }}</span>
  </figcaption>
</figure>
