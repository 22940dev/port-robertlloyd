<div class="items{% if modifier %} items--{{ modifier }}{% endif %}" style="--grid-size: {{ grid_size | default: '100%' }}">
  {%- for item in items limit: limit -%}
    {%- render 'item/{{ component | default: item.data.type | default: item.data.layout }}'
      item: item
      modifier: item_modifier
      card_image_ratio: card_image_ratio
      hide_summary: hide_summary
    -%}
  {%- else -%}
    {%- render 'content' with no_items_content -%}
  {%- endfor -%}
</div>
